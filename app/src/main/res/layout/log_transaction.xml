<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/accountLogItem"
    android:background="@drawable/borders"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:paddingStart="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/transactionRoundImage"
        android:layout_width="43dp"
        android:layout_height="60dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/dollar_icon"
        android:padding="7dp" />
    <RelativeLayout
        android:id="@+id/accountLogDataHolder"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/transactionRoundImage"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        >

        <TextView
            android:id="@+id/transactionIban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="@string/filler" />

        <TextView
            android:id="@+id/transactionDate"
            android:layout_width="wrap_content"
            android:textColor="@color/black_60"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:text="@string/filler"
            />

        <TextView
            android:id="@+id/transactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/filler" />
    </RelativeLayout>
</RelativeLayout>
